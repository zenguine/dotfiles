" Easy closing of window splits
nnoremap <Leader>c <C-w>c

set makeprg=ant
" Enable easy NERDTree toggling
nnoremap <Leader>n :NERDTreeToggle<CR>
"Move a line of text using ALT+[jk] or Comamnd+[jk] on mac
nnoremap <A-j> :m+<CR>==
nnoremap <A-k> :m-2<CR>==
nnoremap <A-h> <<
nnoremap <A-l> >>
inoremap <A-j> <Esc>:m+<CR>==gi
inoremap <A-k> <Esc>:m-2<CR>==gi
inoremap <A-h> <Esc><<`]a
inoremap <A-l> <Esc>>>`]a
vnoremap <A-j> :m'>+<CR>gv=gv
vnoremap <A-k> :m-2<CR>gv=gv
vnoremap <A-h> <gv
vnoremap <A-l> >gv

" Better window navigation
noremap <C-h> <C-w>h
noremap <C-j> <C-w>j
noremap <C-k> <C-w>k
noremap <C-l> <C-w>l

" Highlight cursor line only in active window
au WinEnter * setlocal cursorline
au WinLeave * setlocal nocursorline

" Leaves insert mode after 15 seconds of no input
au CursorHoldI * stopinsert
au InsertEnter * let updaterestore=&updatetime | set updatetime=15000
au InsertLeave * let &updatetime=updaterestore
" Insert mode - map jk to <Esc>
imap jk <Esc>
" Easy editting of this file.
nmap <Leader>s :source ~/.vimrc<CR>
" Make "Y" behavior consistent
nmap Y y$

"Status line gnarliness
set laststatus=2
set statusline=%F%m%r%h%w\ (%{&ff}){%Y}\ [%l,%v][%p%%]
 
" Create Blank Newlines and stay in Normal mode
nnoremap <silent> zj o<Esc>
nnoremap <silent> zk O<Esc>
